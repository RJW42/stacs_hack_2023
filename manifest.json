{
  "manifest_version": 2,
  "name": "ChatGPT Summary",
  "version": "1.0",
  "description": "Summarizes highlighted text using the ChatGPT API",

  "background": {
    "scripts": ["content.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
